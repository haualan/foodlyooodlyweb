<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yukti.foodlyooodly.Other_login"
    android:background="#ff20ffd7"
    style="@style/LoginTheme"
    android:id="@+id/otherLoginRelLayout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebookButton"
        android:src="@drawable/facebook"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitterButton"
        android:src="@drawable/twitter"
        android:layout_alignTop="@+id/facebookButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/googleButton"
        android:layout_below="@+id/facebookButton"
        android:layout_alignLeft="@+id/facebookButton"
        android:layout_alignStart="@+id/facebookButton"
        android:layout_marginTop="50dp"
        android:src="@drawable/google" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linkedinButton"
        android:layout_alignTop="@+id/googleButton"
        android:layout_alignLeft="@+id/twitterButton"
        android:layout_alignStart="@+id/twitterButton"
        android:layout_alignRight="@+id/twitterButton"
        android:layout_alignEnd="@+id/twitterButton"
        android:src="@drawable/linkedin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/githubButton"
        android:layout_below="@+id/googleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/github" />
</RelativeLayout>
